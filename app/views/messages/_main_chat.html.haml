.chat-main
  .main-header
    .main-header__left-box
      .main-header__left-box__current-group
        tech expert
      .main-header__left-box__member-list
        Member : 
        - @group.group_users.each do |group_user|
          = group_user.user.name
    .main-header__side-menu
      = link_to edit_group_path(@group), class: "main-header__side-menu__edit-btn" do
        Edit

  .messages
    = render @messages

  .form
    = form_for [@group, @message] do |f|
      .input-box
        = f.text_field :content, class: 'input-box__text', placeholder: 'type a message'
        =f.label :image, class: 'input-box__image' do
          = icon('fas', 'image', class: 'image-icon')
          = f.file_field :image, class: 'hidden'
      = f.submit 'Send', class: 'submit__btn'